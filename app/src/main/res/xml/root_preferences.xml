<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        app:key="goldbox"
        app:title="@string/goldbox_preferences_title"
        app:summary="@string/goldbox_preferences_summary"
        app:fragment="com.goldbox.app.fragments.settings.GoldBOXPreferencesFragment"/>

    <Preference
        app:key="goldbox_api"
        app:title="@string/goldbox_api_preferences_title"
        app:summary="@string/goldbox_api_preferences_summary"
        app:isPreferenceVisible="false"
        app:fragment="com.goldbox.app.fragments.settings.GoldBOXAPIPreferencesFragment"/>

    <Preference
        app:key="goldbox_float"
        app:title="@string/goldbox_float_preferences_title"
        app:summary="@string/goldbox_float_preferences_summary"
        app:isPreferenceVisible="false"
        app:fragment="com.goldbox.app.fragments.settings.GoldBOXFloatPreferencesFragment"/>

    <Preference
        app:key="goldbox_tasker"
        app:title="@string/goldbox_tasker_preferences_title"
        app:summary="@string/goldbox_tasker_preferences_summary"
        app:isPreferenceVisible="false"
        app:fragment="com.goldbox.app.fragments.settings.GoldBOXTaskerPreferencesFragment"/>

    <Preference
        app:key="goldbox_widget"
        app:title="@string/goldbox_widget_preferences_title"
        app:summary="@string/goldbox_widget_preferences_summary"
        app:isPreferenceVisible="false"
        app:fragment="com.goldbox.app.fragments.settings.GoldBOXWidgetPreferencesFragment"/>

    <Preference
        app:key="about"
        app:title="@string/about_preference_title"
        app:persistent="false"/>
    <!-- app:layout="@layout/preference_markdown_text" -->

    <Preference
        app:key="donate"
        app:title="@string/donate_preference_title"
        app:persistent="false"
        app:isPreferenceVisible="false"/>

</PreferenceScreen>
